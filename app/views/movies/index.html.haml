-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :id => "ratings_form" do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    - if session[:filter_ratings].nil?
      = check_box_tag "ratings[#{rating}]", 1, true, {}
    - elsif session[:filter_ratings].include? rating
      = check_box_tag "ratings[#{rating}]", 1, true, {}
    - else
      = check_box_tag "ratings[#{rating}]", 1, false, {}
  = submit_tag 'Refresh', :id => "ratings_submit"

%table#movies
  %thead
    %tr
      %th{:class => @movie_hilite_class}= link_to 'Movies Title', movies_path(:sort => "title"), :id => "title_head"
      %th Rating
      %th{:class => @date_hilite_class}= link_to 'Release Date', movies_path(:sort => "release_date"), :id => "date_head"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
